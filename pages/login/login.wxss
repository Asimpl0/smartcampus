page{
  background: #fff;
  width: 100%;
  height: 100%;
}
.container {
  
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;

}
.title{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin: 30rpx;
}

.logo {
  width: 300rpx;
  height: 300rpx;
  margin: 30rpx;
}
.tip{
  font-weight: 300rpx;
  color: gray;
}
.content{
  display: flex;
  
  flex-direction: column;
  justify-content: center;
}


.login-btn {
  /* font-size: 13pt; */
  margin-top: 30rpx;
  color: #fff;
  height: 95rpx;
  background: #0251ff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
}

.input-group {
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  margin: 30rpx 3%;
  background: #fff;
  border-radius: 5px;
  border: 1px solid #2794f6;
}


.input-label {
  color: gray;
  font-size: 13pt;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
  border-right: 2px solid #b9ddfd;
}

.input-group input, .input-group picker {
  flex: 1;
  font-size: 13pt;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 25rpx;
}










