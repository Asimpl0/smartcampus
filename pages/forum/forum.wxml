    <van-icon style="margin-left: 60rpx; margin-right: 10rpx;" bind:click="changeRank" slot="right-icon" size="30rpx" name="exchange" class="custom-icon" />
  </van-cell>
  <van-field
    value="{{ ranks[0] }}"
    border="{{ false }}"
    readonly
    size="large"
  ><van-icon style="margin-right: 60rpx;" slot="left-icon" size="50rpx" name="/images/first.png" class="custom-icon" />
  </van-field>
  <van-field
    value="{{ ranks[1] }}"
    border="{{ false }}"
    readonly
    size="large"
  ><van-icon style="margin-right: 60rpx;" slot="left-icon" size="50rpx" name="/images/second.png" class="custom-icon" />
  </van-field>
  <van-field
    value="{{ ranks[2] }}"
    border="{{ false }}"
    readonly
    size="large"
  ><van-icon style="margin-right: 60rpx;" slot="left-icon" size="50rpx" name="/images/third.png" class="custom-icon" />
  </van-field>
</van-cell-group>
</view>
